{
  "name": "claudine",
  "version": "0.2.3",
  "main": "dist/index.js",
  "bin": {
    "claudine": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "config/mcp-servers.example.json"
  ],
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "pretest": "rm -rf test-db test-logs",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest --no-file-parallelism",
    "test:integration": "vitest tests/integration --no-file-parallelism",
    "test:coverage": "npm run test:unit -- --coverage && npm run test:integration -- --coverage",
    "test:watch": "NODE_OPTIONS='--max-old-space-size=2048' vitest --watch",
    "test:e2e": "tsx tests/e2e/test-runner.ts",
    "test:e2e:run": "tsx tests/e2e/test-runner.ts run",
    "test:e2e:results": "tsx tests/e2e/test-runner.ts results",
    "test:stress": "vitest tests/stress --timeout 300000",
    "test:quality": "./scripts/validate-test-quality.sh",
    "test:audit": "echo 'Run /audit-tests command in Claude for full audit'",
    "posttest": "rm -rf test-db/*.db test-db/*.db-wal test-db/*.db-shm",
    "prebuild": "npm run clean",
    "build": "tsc",
    "build:dev": "tsc --project tsconfig.dev.json",
    "build:watch": "tsc --project tsconfig.dev.json --watch",
    "postbuild": "node -e \"require('fs').chmodSync('dist/cli.js', '755')\"",
    "dev": "tsx src/index.ts",
    "dev:watch": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test:ui": "vitest --ui",
    "clean": "rm -rf dist logs test-logs test-db .tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run build && npm test",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "claude",
    "claude-code",
    "automation",
    "task-delegation"
  ],
  "author": "dean0x",
  "license": "MIT",
  "description": "MCP server for delegating tasks to Claude Code",
  "repository": {
    "type": "git",
    "url": "https://github.com/dean0x/claudine.git"
  },
  "bugs": {
    "url": "https://github.com/dean0x/claudine/issues"
  },
  "homepage": "https://github.com/dean0x/claudine#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "better-sqlite3": "^12.4.1",
    "simple-git": "^3.28.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
