{
  "name": "claudine-mcp",
  "version": "0.1.0",
  "main": "dist/index.js",
  "bin": {
    "claudine-mcp": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "config/mcp-servers.example.json"
  ],
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "vitest",
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test:ui": "vitest --ui",
    "clean": "rm -rf dist logs",
    "typecheck": "tsc --noEmit",
    "test:mock": "MOCK_MODE=true node tests/manual/test-mock.js",
    "test:cancel": "node tests/manual/test-cancel-proper.js",
    "test:comprehensive": "node tests/manual/test-comprehensive.js",
    "validate": "./scripts/validate.sh",
    "install:setup": "./scripts/install.sh",
    "prepublishOnly": "npm run build",
    "postinstall": "npm run build"
  },
  "keywords": ["mcp", "claude", "claude-code", "automation", "task-delegation"],
  "author": "dean0x",
  "license": "MIT",
  "description": "MCP server for delegating tasks to Claude Code",
  "repository": {
    "type": "git",
    "url": "https://github.com/dean0x/claudine.git"
  },
  "bugs": {
    "url": "https://github.com/dean0x/claudine/issues"
  },
  "homepage": "https://github.com/dean0x/claudine#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@vitest/ui": "^3.2.4",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
